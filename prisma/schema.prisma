// This is your Prisma schema file for PostgreSQL
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id            String   @id @default(cuid())
  name          String
  description   String
  status        AgentStatus
  category      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lastActive    DateTime @default(now())
  lastExecution DateTime?
  executionCount Int     @default(0)
  configuration Json?
  enabled       Boolean  @default(true)
  
  // User tracking
  createdById   String?
  updatedById   String?
  
  // Relations
  executions    Execution[]
  createdBy     User?       @relation("AgentCreatedBy", fields: [createdById], references: [id])
  updatedBy     User?       @relation("AgentUpdatedBy", fields: [updatedById], references: [id])
  
  @@map("agents")
}

model Execution {
  id        String          @id @default(cuid())
  agentId   String
  status    ExecutionStatus
  startTime DateTime        @default(now())
  endTime   DateTime?
  result    String?
  error     String?
  logs      Json?           // Store execution logs as JSON
  
  // User tracking
  triggeredById String?
  
  // Relations
  agent         Agent           @relation(fields: [agentId], references: [id], onDelete: Cascade)
  triggeredBy   User?           @relation("ExecutionTriggeredBy", fields: [triggeredById], references: [id])
  
  @@map("executions")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      UserRole @default(VIEWER)
  passwordHash String
  lastLoginAt  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  createdAgents   Agent[]     @relation("AgentCreatedBy")
  updatedAgents   Agent[]     @relation("AgentUpdatedBy")
  triggeredExecutions Execution[] @relation("ExecutionTriggeredBy")
  
  @@map("users")
}

enum AgentStatus {
  ACTIVE
  INACTIVE
  RUNNING
  PAUSED
}

enum ExecutionStatus {
  SUCCESS
  FAILED
  RUNNING
  PENDING
}

enum UserRole {
  ADMIN
  OPERATOR
  VIEWER
}
